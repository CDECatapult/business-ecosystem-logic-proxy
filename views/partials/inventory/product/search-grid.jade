// Home -> My Inventory
.container-flex
  .product-container.item-offering.z-depth-1(ng-repeat="product in searchVM.list")
    a.product-thumbnail.product-container-photo(ui-sref="inventory.product.detail({ productId: product.id })", ui-sref-opts="{ inherit: false }")
      img(no-image, ng-src="{{ product.productOffering.getPicture() }}")
      // displaying offering owner
      span.product-city-label {{ "" + product.productOffering.productSpecification.brand }}  
    .my_stock-container-info
      .product-container-info-row
        a.product-container-title(ui-sref="inventory.product.detail({ productId: product.id })", ui-sref-opts="{ inherit: false }") {{ product.productOffering.name }}
        .my_stock-container-version v {{ product.productOffering.version }}
      .form-group.text-dark-secondary
        p 
          b Last updated: 
          time(am-time-ago="offering.lastUpdate")
        p.product-container-description {{ product.productOffering.description ? product.productOffering.description : '#{ __("No description provided.") }' }}
      //
        strong {{ offering.formatCheapestPriceplan() }}

